{
  "$schema": "http://json.schemastore.org/template",
  "author": "NewLife",
  "classifications": [ "NewLife", "Job" ],
  "name": "NewLife AntJob",
  "description": "蚂蚁调度系统子程序，编写数据处理等业务逻辑，连接蚂蚁调度中心，拉取作业任务来执行",
  "identity": "NewLife.AntJob",
  "shortName": "antjob",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Zero.AntJob",
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "目标框架",
      "datatype": "choice",
      "choices": [
        { "choice": "net10.0", "description": ".NET 10 (LTS)" },
        { "choice": "net9.0", "description": ".NET 9 (STS)" },
        { "choice": "net8.0", "description": ".NET 8 (LTS)" }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    },
    "DataProject": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "parameters": {
        "source": "name",
        "steps": [
          { "regex": "\\..+$", "replacement": ".Data" },
          { "regex": "^([^.]+)$", "replacement": "$1.Data" }
        ]
      },
      "replaces": "Zero.Data"
    }
  },
  "preferNameDirectory": true
}