{
  "$schema": "http://json.schemastore.org/template",
  "author": "NewLife",
  "classifications": [ "NewLife", "Common", "Web", "API", "Web API" ],
  "name": "NewLife WebApi",
  "description": "数据接口，带有Swagger的标准WebApi接口项目",
  "identity": "NewLife.WebApi.2024",
  "groupIdentity": "NewLife.WebApi",
  "shortName": "cubeapi",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Zero.WebApi",
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "目标框架",
      "datatype": "choice",
      "choices": [
        { "choice": "net10.0", "description": ".NET 10 (LTS)" },
        { "choice": "net9.0", "description": ".NET 9 (STS)" },
        { "choice": "net8.0", "description": ".NET 8 (LTS)" }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    },
    "DataProject": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "parameters": {
        "source": "name",
        "steps": [
          { "regex": "\\..+$", "replacement": ".Data" },
          { "regex": "^([^.]+)$", "replacement": "$1.Data" }
        ]
      },
      "replaces": "Zero.Data"
    }
  },
  "preferNameDirectory": true
}