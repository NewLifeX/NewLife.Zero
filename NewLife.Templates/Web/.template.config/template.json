{
  "$schema": "http://json.schemastore.org/template",
  "author": "NewLife",
  "classifications": [ "NewLife", "Common", "Web", "MVC" ],
  "name": "NewLife Web",
  "description": "零代数据管理平台，基于魔方，快速开发各种管理后台",
  "identity": "NewLife.Web.2024",
  "groupIdentity": "NewLife.Web",
  "shortName": "cube",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Zero.Web",
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "目标框架",
      "datatype": "choice",
      "choices": [
        { "choice": "net10.0", "description": ".NET 10 (LTS)" },
        { "choice": "net9.0", "description": ".NET 9 (STS)" },
        { "choice": "net8.0", "description": ".NET 8 (LTS)" }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    },
    "DataProject": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "parameters": {
        "source": "name",
        "steps": [
          { "regex": "\\..+$", "replacement": ".Data" },
          { "regex": "^([^.]+)$", "replacement": "$1.Data" }
        ]
      },
      "replaces": "Zero.Data"
    }
  },
  "preferNameDirectory": true
}